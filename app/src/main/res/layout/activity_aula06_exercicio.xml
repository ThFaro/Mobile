<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título da tarefa"/>

    <EditText
        android:id="@+id/edtDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição da tarefa"/>

    <CheckBox
        android:id="@+id/chkStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Concluída"/>

    <Button
        android:id="@+id/btnSalvarTarefa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar Tarefa"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/btnAtualizarTarefa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atualizar Tarefa"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/listViewTarefas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
