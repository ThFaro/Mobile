<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExemploAula05">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Digite um endereço"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/campoEndereco"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:text="http://www.google.com.br"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="-3dp" />

    <Button
        android:id="@+id/botaoOk"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="316dp"
        android:layout_marginEnd="60dp"
        android:text="Visualizar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintStart_toEndOf="@+id/botaoTelefone"
        app:layout_constraintTop_toBottomOf="@+id/campoTelefone" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="204dp"
        android:text="Digite um o telefone" />

    <EditText
        android:id="@+id/campoTelefone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/botaoTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefonar"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="278dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Digite o ID do contato e pressione o botão"
        />
    <EditText
        android:id="@+id/campoID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/botaoCampoID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="329dp"
        android:text="Visualizar Contatos"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="7dp" />


</androidx.constraintlayout.widget.ConstraintLayout>